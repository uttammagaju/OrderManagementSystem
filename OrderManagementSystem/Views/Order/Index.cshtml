
<div class="container mt-4">
    <h2>Order Management System</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orderModal">
        Create New Order
    </button>

    <div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="orderModalLabel">
                        <span data-bind="ifnot: IsUpdated">Create New Order</span>
                        <span data-bind="if: IsUpdated">Update Order</span>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" data-bind="click: CloseModel"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row" data-bind="with:SelectedOrder">
                            <div class="col-md-4 form-group">
                                <label>Date:</label>
                                <input type="date" class="form-control" data-bind="value:Date">
                            </div>
                            <div class="col-md-4 form-group">
                                <label>Customer Name:</label>
                                <input type="text" class="form-control" data-bind="value:CustomerName">
                            </div>
                            <div class="col-md-4 form-group">
                                <label>Address:</label>
                                <input type="text" class="form-control" data-bind="value:Address">
                            </div>
                        </div>
                        <h4>Order Items</h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: SelectedOrder().Items">
                                <tr>
                                    <td><input type="text" class="form-control" data-bind="value:ProductName"></td>
                                    <td><input type="number" class="form-control" data-bind="value:Quantity"></td>
                                    <td><input type="number" step="0.01" class="form-control" data-bind="value:Price" /></td>
                                    <td>
                                        <button class="btn btn-danger btn-sm" data-bind="click:$parent.RemoveItem">
                                            <i class="fa-solid fa-trash-can"></i>Remove
                                        </button>
                                        <button class="btn btn-success mb-3" data-bind="click:$parent.AddItem">
                                            <i class="fa-solid fa-plus"></i>Add Item</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                       
                        <div class="form-group">
                            <label>Total Amount:</label>
                            <input  class="form-control" readonly data-bind="value:totalAmount">
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">
                        <span data-bind="click: SaveOrder,">Create</span>
                        <span data-bind="if: IsUpdated"> Update</span>
                    </button>
                    <button  class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Customer Name</th>
                <th>Total Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:Orders()">
            <tr>
                <td data-bind="text:OrderId"></td>
                <td data-bind="text:Date"></td>
                <td data-bind="text:CustomerName"></td>
                <td data-bind="text:TotalAmount"></td>
                <td>
                    <button class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#orderModal" data-bind="click: $parent.SelectOrder">Edit</button>
                    <button class="btn btn-sm btn-danger" data-bind="click: $root.DeleteOrder">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/js/knockout.js"></script>
    <script src="~/js/Order/Order.Controller.js"></script>
    <script src="~/js/Order/Order.Model.js"></script>
    <script>
        {
            var obj = new OrderController();
            ko.applyBindings(obj);
        }
    </script>
}
